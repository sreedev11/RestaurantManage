<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/HomeLayoutStyle.css" rel="stylesheet" />
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar">
            <div class="navbar-container">
                <a class="navbar-brand" href="#">
                    <img src="~/images/Screenshot 2024-12-01 121737.png" alt="Logo" class="logoclass" />
                    <span>Agthia</span>
                </a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Home", "Restaurant")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("AboutUs", "Restaurant")">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "Restaurant")">Sign In</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("RegisterUser", "Restaurant")">Sign Up</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Restaurant")">Contact Us</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="contact-info">
            <p>Contact us at: <strong>info@agthia.com</strong></p>
            <p>Phone: <strong>9087866663</strong></p>
        </div>
        <div>
            <p>&copy; 2024 Agthia Inc. All Rights Reserved.</p>
        </div>
    </footer>
</body>
</html>
