<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/UserDashboard.css" rel="stylesheet" />
</head>
<body>

    <header>
        <nav class="navbar">
            <div class="navbar-container">
                <a class="navbar-brand" href="#">
                    <img src="~/images/Screenshot 2024-12-01 121737.png" alt="Logo" class="logoclass" />
                    <span>Agthia</span>
                </a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("UserHome", "Restaurant")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("EditUser", "Restaurant")">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("UserReservationStatus", "Restaurant")">Reservation Status</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Logout", "Restaurant")"
                           onclick="return confirm('Are you sure you want to logout?');">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>


    <main class="container">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="contact-info">
            <p>Contact us at: <strong>info@agthia.com</strong></p>
            <p>Phone: <strong>9087866663</strong></p>
        </div>
        <div>
            <p>&copy; 2024 Agthia Inc. All Rights Reserved.</p>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
