@model List<RestaurantManage.Models.Registration>

@{
    Layout = "~/Views/Shared/AdminDashboardLayout.cshtml";
}

<h2 class="AllUsers-heading">Users List</h2>

<table class="AllUsers-table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Gender</th>
            <th>Phone Number</th>
            <th>Email Address</th>
            <th>Address</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.DateOfBirth.ToString("yyyy-MM-dd")</td>
                <td>@user.Gender</td>
                <td>@user.PhoneNumber</td>
                <td>@user.EmailAddress</td>
                <td>@user.Address</td>
                <td>@user.Username</td>
                <td>
                    <form method="post" action="@Url.Action("DeleteConfirmed", "Restaurant", new { id = user.ID })" onsubmit="return confirm('Are you sure you want to delete this record?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="AllUsers-delete-btn">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="AllUsers-back-btn-container">
    <a href="@Url.Action("AllUsers", "Restaurant")" class="AllUsers-register-btn ">Back</a>
</div>
