@model RestaurantManage.Models.Reservation

@{
    ViewData["Title"] = "Payment";
    Layout = "~/Views/Shared/UserDashboardLayout.cshtml";
}

<h2>Payment</h2>

<form asp-action="ConfirmPayment" method="post" class="payment-form">
    <div class="form-group">
        <label for="PaymentAmount">Enter Amount</label>
        <input type="number" name="PaymentAmount" class="form-control" id="PaymentAmount" required />
        <span class="text-danger" style="display:block; margin-top: 5px;">@ViewBag.ErrorMessage</span>
    </div>

    <div class="form-group">
        <label for="Amount">Required Amount</label>
        <input type="text" id="Amount" class="form-control" value="@Model.Amount" readonly />
    </div>

    <input type="hidden" asp-for="ReserveDate" />
    <input type="hidden" asp-for="ReserveTime" />
    <input type="hidden" asp-for="Number_of_Persons" />
    <input type="hidden" asp-for="Table" />
    <input type="hidden" asp-for="TableType" />
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="Amount" />

    <button type="submit" class="btn btn-success">Confirm Payment</button>
</form>

<style>
    .payment-form {
        max-width: 400px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
    }

        .form-group label {
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input.form-control {
            height: 30px;
            padding: 10px;
            font-size: 16px;
            border-radius:10px;
        }

    .text-danger {
        color: red;
        font-size: 14px;
        display: block;
        margin-top: 5px;
    }

    .btn-success {
        background-color: green;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
    }

        .btn-success:hover {
            background-color: darkgreen;
        }
</style>
